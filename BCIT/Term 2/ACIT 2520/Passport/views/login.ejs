<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2>Login</h2>

      <!-- Local login form -->
      <form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>

      <p class="mt-4">New User? <a href="/auth/register">Register</a></p>
      <p>Forgot Password? <a href="/auth/forgot">Reset</a></p>

      <!-- Divider -->
      <hr>

      <!-- GitHub login button -->
      <div style="text-align: center; margin-top: 10px;">
        <a href="/auth/auth/github"
           class="btn btn-dark btn-block"
           style="background-color:#24292e; border:none; color:white;">
          <i class="fa fa-github" style="margin-right:5px;"></i>
          Login with GitHub
        </a>
      </div>
    </div>
  </div>
</div>
